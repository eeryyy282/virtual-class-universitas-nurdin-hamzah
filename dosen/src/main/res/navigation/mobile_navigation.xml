<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.mjs.dosen.presentation.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_navigation_home_to_navigation_task"
            app:destination="@id/navigation_task" />
    </fragment>

    <fragment
        android:id="@+id/navigation_task"
        android:name="com.mjs.dosen.presentation.task.TaskFragment"
        android:label="@string/title_task"
        tools:layout="@layout/fragment_task" />

    <fragment
        android:id="@+id/navigation_schedule"
        android:name="com.mjs.dosen.presentation.schedule.ScheduleFragment"
        android:label="@string/title_schedule"
        tools:layout="@layout/fragment_schedule" />

    <fragment
        android:id="@+id/navigation_classroom"
        android:name="com.mjs.dosen.presentation.classroom.ClassroomFragment"
        android:label="@string/title_classroom"
        tools:layout="@layout/fragment_classroom" />

    <fragment
        android:id="@+id/navigation_setting"
        android:name="com.mjs.dosen.presentation.setting.SettingFragment"
        android:label="@string/title_setting"
        tools:layout="@layout/fragment_setting" />
</navigation>