<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <TextView
            android:id="@+id/tv_title_active_tasks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:text="@string/active_tasks"
            android:textColor="@color/outline_color_theme"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_active_tasks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="@+id/tv_title_active_tasks"
            app:layout_constraintStart_toStartOf="@+id/tv_title_active_tasks"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_active_tasks"
            tools:listitem="@layout/item_task_detail" />

        <ImageView
            android:id="@+id/iv_no_active_tasks"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/no_active_tasks_text"
            android:src="@drawable/doesnt_have_an_content_icon"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/rv_active_tasks"
            app:layout_constraintStart_toStartOf="@+id/rv_active_tasks"
            app:layout_constraintTop_toBottomOf="@+id/rv_active_tasks" />

        <TextView
            android:id="@+id/tv_no_active_tasks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/lato"
            android:text="@string/no_active_tasks_text"
            android:textAlignment="center"
            android:textColor="@color/text_color_themed"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/iv_no_active_tasks"
            app:layout_constraintStart_toStartOf="@+id/iv_no_active_tasks"
            app:layout_constraintTop_toBottomOf="@+id/iv_no_active_tasks" />

        <TextView
            android:id="@+id/tv_title_past_deadline_tasks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/lato"
            android:text="@string/tasks_ready_for_grading"
            android:textColor="@color/outline_color_theme"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/tv_title_active_tasks"
            app:layout_constraintStart_toStartOf="@+id/tv_title_active_tasks"
            app:layout_constraintTop_toBottomOf="@+id/tv_no_active_tasks" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_past_deadline_tasks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="@+id/tv_title_past_deadline_tasks"
            app:layout_constraintStart_toStartOf="@+id/tv_title_past_deadline_tasks"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_past_deadline_tasks"
            tools:listitem="@layout/item_task_detail" />

        <ImageView
            android:id="@+id/iv_no_past_deadline_tasks"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/no_tasks_ready_for_grading_text"
            android:src="@drawable/doesnt_have_an_content_icon"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/rv_past_deadline_tasks"
            app:layout_constraintStart_toStartOf="@+id/rv_past_deadline_tasks"
            app:layout_constraintTop_toBottomOf="@+id/rv_past_deadline_tasks" />

        <TextView
            android:id="@+id/tv_no_past_deadline_tasks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/lato"
            android:text="@string/no_tasks_ready_for_grading_text"
            android:textAlignment="center"
            android:textColor="@color/text_color_themed"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/iv_no_past_deadline_tasks"
            app:layout_constraintStart_toStartOf="@+id/iv_no_past_deadline_tasks"
            app:layout_constraintTop_toBottomOf="@+id/iv_no_past_deadline_tasks" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>